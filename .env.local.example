# HARKA10 Environment Configuration
# Copy this file to .env.local and fill in your values

# Clerk Authentication (Required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_here

# Clerk URLs (Simplified - let middleware handle routing)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/learn/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/learn/dashboard

# Database (Choose one: Supabase or other)
# If using Supabase for data only (not auth)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Stripe Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing (Danish Market)
NEXT_PUBLIC_PRICE_ID_BASIC=price_basic_monthly_dkk
NEXT_PUBLIC_PRICE_ID_PRO=price_pro_monthly_dkk
NEXT_PUBLIC_PRICE_ID_ENTERPRISE=price_enterprise_monthly_dkk

# AI Integration (OpenRouter for AI features)
OPENROUTER_API_KEY=your_openrouter_key
NEXT_PUBLIC_AI_MODEL=anthropic/claude-3-haiku

# Application Settings
NEXT_PUBLIC_APP_NAME=HARKA AI Training
NEXT_PUBLIC_APP_URL=https://learn.harka.dk
NEXT_PUBLIC_SUPPORT_EMAIL=support@harka.dk

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_TEAM_FEATURES=true
NEXT_PUBLIC_ENABLE_DANISH_CONTENT=true

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://eu.posthog.com
